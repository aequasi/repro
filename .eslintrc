{
    "extends": [
        "oclif",
        "oclif-typescript"
    ],
    "rules":   {
        "indent": [
            "error",
            4,
            {
                "flatTernaryExpressions": true,
                "SwitchCase":             1
            }
        ],
        "key-spacing": [
            2,
            {
                "afterColon": true,
                "align": "value",
                "beforeColon": false,
                "mode": "minimum"
            },
        ],
    }
}
